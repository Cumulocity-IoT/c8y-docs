<html>
<head>
    <title><%= @document.title %> | <%= @site.title %></title>
    <%- @getBlock("meta").toHTML() %>
    <%- @getBlock("styles").toHTML() %>
    <link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css">
</head>
<body>
    <div class="container">

    <div class="row">

    <ul class="col-md-3 nav nav-pills nav-stacked">

      <% for section in @getSections():%>
        <li><%= section.title %>
            <ul>
            <% for page in @getCollection('pages').findAll({relativeDirPath: section.raw}).toJSON():%>
                <li class="<%= if page.id is @document.id then 'active' %>">
                    <a href="<%= page.url%>"> <%= page.title || 'no title' %></a>
                </li>
            <% end %>
            </ul>
        </li>
      <% end %>


    </ul>

        <div class="col-md-9">
            <h1><%= @document.title %></h1>
            <%- @content %>
        </div>
    </div>
    </div>
    <%- @getBlock("scripts").toHTML() %>
</body>
</html>